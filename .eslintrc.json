{
  "env": {
    "browser": true,
    "amd": true,
    "jasmine": true
  },
  "globals": {
    "marks": true,
    "Board": true,
    "BoardView": true,
    "setFixtures": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
